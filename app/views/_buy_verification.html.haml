.header-contener
  =link_to "#" do
    = image_tag "logo/logo.png"
.form-body
  .field-contener
    .registration 
      購入内容の確認
    .registration__item
      .registration__inner
        .buy-item-box
          %h3.buy-item__image
            =image_tag "/assets/care-.png"
          .buy-item__detail
            .buy-item__name
              商品の名前
            %p.buy-price
              %span
                ¥300
              %span.item__shipping-fee.bold
                (税込)送料込み
    .registration__content
      .buy-content__inner
        %form.buy-form
          %ul.buy-price-table
            %li.buy-price__row
              .buy-price__pay.bold
                支払い金額
              .buy-price__price
                %span.data-buy__cell.bold
                  ¥300
          %ul.buy-point
            %li.buy-point__parent
              .buy-user_point
                %input{type:"checkbox"}
                %label
                  ポイントを使用(所有ポイント:P0)
          .buy-content__inner
            %h3
              支払い方法
            = link_to "#" do
              %p.buy-info_text
                %i.fas.fa-plus-circle
                %span.buy-register-text
                  登録してください
          .buy-content__inner
            %h3
              配送先
            .residences__box
              .residences__postal_code
                〒000-0000
              .residences__prefectures
                福岡県
              .residences__municipality
                福岡市博多区中洲111-2
            = link_to "#" do
              %p.buy-info_text
                %i.far.fa-edit
                %span.buy-register-text
                  変更したい場合はこちら
    .registration-form
      .top-link
        = link_to("購入する", "#", class: "link-text")
