.header-contener
  =link_to "root_path" do
    = image_tag "logo/logo.png"
.form-body
  .field-contener
    .registration
      クレジットカード情報入力
      = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
        .product_name
          .product_name__wide
            .product_name_box__img
              .product_name_box__description
                %b
                  カード番号
                .form-required
                  %b
                    必須
              .product_box__comennt
                = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
              %ul.sigup__card-list
                %li
                  = image_tag "card/Visa.jpg" 
                %li
                  = image_tag "card/Master.jpg"
                %li
                  = image_tag "card/Saison.jpg"
                %li
                  = image_tag "card/Jcb.jpg"
                %li
                  = image_tag "card/American_Express.jpg"
                %li
                  = image_tag "card/Diner_club.jpg"
                %li
                  = image_tag "card/Discover.jpg"
              .product_name_box__description
                %b
                  有効期限
                .form-required
                  %b
                    必須
              .product_box__comennt
                %select#exp_month{name: "exp_month", type: "text"}
                  %option{value: ""} --
                  %option{value: "1"}01
                  %option{value: "2"}02
                  %option{value: "3"}03
                  %option{value: "4"}04
                  %option{value: "5"}05
                  %option{value: "6"}06
                  %option{value: "7"}07
                  %option{value: "8"}08
                  %option{value: "9"}09
                  %option{value: "10"}10
                  %option{value: "11"}11
                  %option{value: "12"}12
                %b 月/
                %select#exp_year{name: "exp_year", type: "text"}
                  %option{value: ""} --
                  %option{value: "2020"}20
                  %option{value: "2021"}21
                  %option{value: "2022"}22
                  %option{value: "2023"}23
                  %option{value: "2024"}24
                  %option{value: "2025"}25
                  %option{value: "2026"}26
                  %option{value: "2027"}27
                  %option{value: "2028"}28
                  %option{value: "2029"}29
                  %option{value: "2030"}30
                %b 年
              .product_name_box__description
                %b
                  セキュリティコード
                .form-required
                  %b
                    必須
              .product_box__comennt
                = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
    .form-body
      .field-contener
        .form__upper#card_token
          = submit_tag "追加する", id: "token_submit"

